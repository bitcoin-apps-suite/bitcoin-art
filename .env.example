# Bitcoin Art OAuth Configuration
# Copy this file to .env.local and fill in your OAuth credentials

# Google OAuth 2.0
# Get these from https://console.developers.google.com/
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# DeviantArt OAuth 2.0
# Get these from https://www.deviantart.com/developers/register
NEXT_PUBLIC_DEVIANTART_CLIENT_ID=your_deviantart_client_id_here
DEVIANTART_CLIENT_SECRET=your_deviantart_client_secret_here

# HandCash OAuth
# Get these from https://app.handcash.io/developers
NEXT_PUBLIC_HANDCASH_APP_ID=your_handcash_app_id_here
HANDCASH_APP_SECRET=your_handcash_app_secret_here

# Optional: Additional OAuth Providers
# NEXT_PUBLIC_TWITTER_CLIENT_ID=your_twitter_client_id_here
# TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# Application URLs (set these to your actual domain in production)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Database (if using persistent storage for user profiles)
# DATABASE_URL=your_database_connection_string_here

# Session Security (generate a random string for production)
NEXTAUTH_SECRET=your_nextauth_secret_here